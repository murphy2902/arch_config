# General Applications
# # #

# TODO: Find a way to use flags + generic stuff

"$APP_TERMINAL"
	Mod4 + Return

"uxterm -class Floating"
	Shift+Mod4 + Return

"$APP_BROWSER"
	Mod4 + 1

"$APP_FILEBROWSER"
	Mod4 + 2

"$APP_EDITOR"
	Mod4 + 3

"uxterm -class Floating -e ncmpcpp"
	Mod4 + 4

"uxterm -e screen irssi --home=${XDG_CONFIG_HOME}/irssi"
	Mod4 + 5

"arandr"
	Mod4 + a

"eclipse"
	Mod4 + e

"scrot -s"
	Mod4 + j

"$APP_EMAIL"
	Mod4 + m

"nitrogen"
	Mod4 + n

"passmenu"
	Mod4 + p

"$APP_VIDEO"
	Mod4 + v

"xbacklight -dec 10"
	XF86MonBrightnessDown

"xbacklight -inc 10"
	XF86MonBrightnessUp

"amixer set Master 5+"
	XF86AudioRaiseVolume

"amixer set Master 5-"
	XF86AudioLowerVolume

"amixer set Master toggle"
	XF86AudioMute

# Internet Shortcuts
# # #


"$APP_BROWSER https://www.mail.google.com"
	Mod2 + m

"$APP_BROWSER www.youtube.com"
	Mod2 + v

"$APP_BROWSER www.google.com/calendar"
	Mod2 + c

"$APP_BROWSER www.facebook.com"
	Mod2 + f

"$APP_BROWSER www.drive.google.com"
	Mod2 + 2

