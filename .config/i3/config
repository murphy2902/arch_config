# Audio Up/Down/Mute

bindsym XF86AudioRaiseVolume exec amixer set Master 5+
bindsym XF86AudioLowerVolume exec amixer set Master 5-
bindsym XF86AudioMute exec amixer set Master toggle

#########################################
#
#     Window Stuff 
#
#########################################

# change focus
bindsym $winmod+h focus left
bindsym $winmod+j focus down
bindsym $winmod+k focus up
bindsym $winmod+l focus right

# alternatively, you can use the cursor keys:
bindsym $winmod+Left focus left
bindsym $winmod+Down focus down
bindsym $winmod+Up focus up
bindsym $winmod+Right focus right

# move focused window
bindsym $winmod+Shift+h move left
bindsym $winmod+Shift+j move down
bindsym $winmod+Shift+k move up
bindsym $winmod+Shift+l move right

# split in horizontal orientation
bindsym $winmod+u split h

# split in vertical orientation
bindsym $winmod+i split v

# enter fullscreen mode for the focused container
bindsym $winmod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $winmod+s layout stacking
bindsym $winmod+w layout tabbed
bindsym $winmod+e layout toggle split

# toggle tiling / floating
bindsym $winmod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $winmod+space focus mode_toggle

# focus the parent container
bindsym $winmod+a focus parent

# focus the child container
#bindsym $winmod+d focus child

#########################################
#
#     Workspace Stuff
#
#########################################

# setting workspace names

set $WS1 1
set $WS2 2
set $WS3 3
set $WS4 4
set $WS5 5
set $WS6 6
set $WS7 7
set $WS8 8
set $WS9 9
set $WS10 10

# switch to workspace
bindsym $winmod+1 workspace $WS1
bindsym $winmod+2 workspace $WS2
bindsym $winmod+3 workspace $WS3
bindsym $winmod+4 workspace $WS4
bindsym $winmod+5 workspace $WS5
bindsym $winmod+6 workspace $WS6
bindsym $winmod+7 workspace $WS7
bindsym $winmod+8 workspace $WS8
bindsym $winmod+9 workspace $WS9
bindsym $winmod+0 workspace $WS10

# throw to workspace
bindsym $winmod+Shift+1 move container to workspace $WS1
bindsym $winmod+Shift+2 move container to workspace $WS2
bindsym $winmod+Shift+3 move container to workspace $WS3
bindsym $winmod+Shift+4 move container to workspace $WS4
bindsym $winmod+Shift+5 move container to workspace $WS5
bindsym $winmod+Shift+6 move container to workspace $WS6
bindsym $winmod+Shift+7 move container to workspace $WS7
bindsym $winmod+Shift+8 move container to workspace $WS8
bindsym $winmod+Shift+9 move container to workspace $WS9
bindsym $winmod+Shift+0 move container to workspace $WS10

# start arandr (Application Stuff)
# bindsym $exmod+a exec arandr



# reload the configuration file
bindsym $exmod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $exmod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $exmod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $winmod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	position bottom
        status_command i3status --config ~/.config/i3status/config
}
